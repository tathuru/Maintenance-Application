<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".sur_ssr_eldis4">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Â© 2019-2020 Deepak Singh" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Select ELDIS 4 SSR Schedule to perform Maintenance."
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="DAILY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dailypsr"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="dailyClicked"
            android:textSize="12sp" />
        <Button
            android:text="Weekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weekly"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="12sp"
            android:onClick="weeklyClicked" />

        <Button
            android:text="fort&#10;nightly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fortnightly"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="fortnightlyClicked"
            android:textSize="12sp" />

        <Button
            android:text="Monthly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/monthly"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="12sp"
            android:onClick="monthlyClicked" />

        <Button
            android:text="quarterly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quarterly"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="11sp"
            android:onClick="quaterlyClicked"/>

        <Button
            android:text="half&#10;Yearly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/halfYearly"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="12sp"
            android:onClick="halfYearlyClicked" />

        <Button
            android:text="Yearly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yearly"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="12sp"
            android:onClick="yearlyClicked" />

        <Button
            android:text="miscellaneous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/miscellaneous"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="8sp"
            android:onClick="miscellaneousClicked" />

    </GridLayout>

</RelativeLayout>